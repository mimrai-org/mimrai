{
	"extends": "@mimir/tsconfig/base.json",
	"include": [
		"src",
		"../../apps/api/src/ai",
		"../integration/src/registry.ts",
		"../jobs/src/jobs/notifications/send-notification-job.ts"
	],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"verbatimModuleSyntax": true,
		"module": "esnext",
		"moduleResolution": "bundler",

		"paths": {
			"@api/*": ["../../apps/api/src/*"],
			"@integration/*": ["../integration/src/*"],
			"@notifications/*": ["../notifications/src/*"],
			"@jobs/*": ["../jobs/src/*"]
		}
	}
}
