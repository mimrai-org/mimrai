{
	"extends": "@mimir/tsconfig/base.json",
	"include": ["src"],
	"exclude": ["**/node_modules", "**/.*/"],
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"strictNullChecks": false,
		"verbatimModuleSyntax": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			"@jobs/*": ["src/*"],
			"@api/ai/*": ["../../apps/api/src/ai/*"]
		},
		"jsx": "react-jsx"
	}
}
