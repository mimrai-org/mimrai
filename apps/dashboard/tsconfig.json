{
	"extends": "@mimir/tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"strict": true,
		"verbatimModuleSyntax": true
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx",
		"./.next/types/**/*.ts",
		"./next-env.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", ".next"],
	"references": [
		{
			"path": "../api"
		}
	]
}

