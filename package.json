{
  "name": "mimir",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/email/*"
  ],
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:dashboard": "turbo -F dashboard dev",
    "dev:api": "turbo -F api dev",
    "db:push": "turbo -F db db:push",
    "db:studio": "turbo -F db db:studio",
    "db:generate": "turbo -F db db:generate",
    "db:migrate": "turbo -F db db:migrate"
  },
  "dependencies": {},
  "devDependencies": {
    "@mimir/tsconfig": "workspace:*",
    "@biomejs/biome": "^2.2.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.21",
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "es5-ext"
  ]
}
