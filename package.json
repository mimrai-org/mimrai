{
  "name": "mimir",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/email/*"
  ],
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:dashboard": "turbo -F @mimir/dashboard dev",
    "dev:api": "turbo -F @mimir/api dev",
    "dev:website": "turbo -F @mimir/website dev",
    "db:push": "turbo -F @mimir/db db:push"
  },
  "devDependencies": {
    "@mimir/tsconfig": "workspace:*",
    "@biomejs/biome": "^2.2.0",
    "turbo": "2.5.6",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.21",
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "es5-ext"
  ],
  "dependencies": {
    "@trpc/next": "^11.6.0"
  }
}
